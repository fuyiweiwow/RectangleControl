<Application x:Class="RectangleControl.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:p="http://prismlibrary.com/"
             xmlns:vm="clr-namespace:RectangleControl.ViewModels"
             xmlns:v="clr-namespace:RectangleControl.Views"
             xmlns:local="clr-namespace:RectangleControl">
    <Application.Resources>
        <DataTemplate x:Key="TestButtonTemplate" DataType="vm:TestButtonsViewModel">
            <Button
                Width="200"
                Height="50"
                Margin="0,0,0,10"
                Content="{Binding Text}">
                <b:Interaction.Triggers>
                    <b:EventTrigger EventName="Click">
                        <b:InvokeCommandAction Command="{Binding Command}" />
                    </b:EventTrigger>
                </b:Interaction.Triggers>
            </Button>
        </DataTemplate>
        <DataTemplate x:Key="MarkRectangleTemplate" DataType="vm:MarkRectangleViewModel">
            <v:MarkRectangleControl />
        </DataTemplate>
    </Application.Resources>
</Application>
